<%= form_with model: @movie, url: movie_path do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :released %>
  <%= f.date_field :released %>

  <%= f.label :runtime %>
  <%= f.text_field :runtime %>

  <%= f.label :genre %>
  <%= f.text_field :genre %>

  <%= f.label :description %>
  <%= f.text_area :description %>

  <%= f.label :actors %>
  <%= f.text_field :actors %>

  <%= f.label :director %>
  <%= f.text_field :director %>

  <%= f.label :imdb_rating %>
  <%= f.text_field :imdb_rating %>

  <%= f.submit %>
<% end %>
